{% use "form_div_layout.html.twig" %}

{% block wang_editor_widget %}
    {% set attr = attr|merge({style: "height: 300px;"}) %}
    {% spaceless %}
        {{ block('textarea_widget') }}
        <script type="text/javascript">
            $(function () {
                var editor = new wangEditor("{{ id }}");
                editor.create();
            });
        </script>
    {% endspaceless %}
{% endblock %}